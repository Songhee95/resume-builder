<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Builder</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.1/css/bulma.min.css" rel="stylesheet"
        crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/{{style}}" type="text/css">
    <link href=" ../assets/css/style.css" rel="stylesheet" type="text/css">
    <link href=" ../assets/css/home.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>
</head>

<body>
    <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item app__name" href="/">
                RESUME BUILDER
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu navbar-before-login visible">
            <div class="navbar-end">
                <a href="/signin" class="navbar-item signup__link">
                    Sign up
                </a>
                <a href="/login" class="navbar-item login__link">
                    Log in
                </a>
            </div>
        </div>
        <div id="navbarBasicExample" class="navbar-menu  navbar-after-login hidden">
            <div class="navbar-end">
                <a class="navbar-item is-active" href='/index'>
                    Home
                </a>
                <a class="navbar-item" href="/newResume">
                    New Resume
                </a>
                <a class="navbar-item logout__button" href="/">
                    Log Out
                </a>
            </div>
        </div>
    </nav>
    {{{body}}}
</body>
<script>
    const user = JSON.parse(sessionStorage.getItem('userId'))
    if (user) {
        $(".navbar-before-login")
            .removeClass('visible')
            .addClass('is-hidden')
        $('.navbar-after-login')
            .removeClass('is-hidden')
            .addClass('visible')
    } else {
        $(".navbar-before-login")
            .removeClass('is-hidden')
            .addClass('visible')
        $('.navbar-after-login')
            .removeClass('visible')
            .addClass('is-hidden')

    }

    $(".logout__button").click(function () {
        sessionStorage.setItem("userId", null);
    });
</script>
<script src="../js/login.js" type="text/javascript"></script>
<script src="../js/signin.js" type="text/javascript"></script>
<script src="../js/navbar.js" type="text/javascript"></script>
<script src="../assets/js/form.js" type="text/javascript"></script>
<script src="../assets/js/formEdit.js" type="text/javascript"></script>
<script src="../assets/js/templateOne.js" type="text/javascript"></script>

</html>